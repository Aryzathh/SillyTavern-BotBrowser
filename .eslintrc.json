{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": ["warn", { "allow": ["warn", "error", "info"] }],
    "eqeqeq": "warn",
    "no-undef": "warn"
  },
  "globals": {
    "DOMPurify": "readonly",
    "fuse": "readonly",
    "toastr": "readonly"
  }
}
